<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <!-- android:fitsSystemWindows="true" will make the navigation drawer draw UNDER the status bar -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- android:layout_height="?attr/actionBarSize" sets the height to the phones(different for each phone,thats why we use this attribute) height -->

        <!-- android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>  will make the text of toolbar WHITE -->
        <!-- ^opposite is @style/ThemeOverlay.AppCompat.ActionBar-->

        <!-- android:popupTheme="@style/ThemeOverlay.AppCompat.Light"  ?? -->

        <!-- android:elevation this will draw a show bellow actionbar-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />


        <!-- we will put our fragments in here -->
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


    <!-- android:layout_gravity="start"  ???  -->
    <!-- app:headerLayout="@layout/nav_header" will automaticaly place the HEADER in our navigation drawer -->
    <!-- app:menu="@menu/drawer_menu" will automaticaly place the MENU in our navigation drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />


</android.support.v4.widget.DrawerLayout>